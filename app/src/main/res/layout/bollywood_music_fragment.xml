<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    android:background="@android:color/white"
    android:fillViewport="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".ScrollingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:padding="4dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginRight="4dp"
                    android:hint="Search your music here ..."
                    android:textAlignment="center"
                    android:inputType="textNoSuggestions"
                    android:singleLine="true"
                    android:id="@+id/search_box"/>
                <ImageView
                    android:id="@+id/clear_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:layout_centerVertical="true"
                    android:soundEffectsEnabled="true"
                    android:layout_alignParentStart="true"
                    android:background="@android:drawable/ic_menu_close_clear_cancel" />

            </RelativeLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:stateListAnimator="@null"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:text="search"
                android:id="@+id/submit_button"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:indeterminate="true"
                android:paddingRight="4dp"
                android:id="@+id/progressbar"
                android:visibility="gone"
                android:layout_gravity="center"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/item_count"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/search_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="4dp"
                    android:paddingTop="14dp"
                    android:layout_height="22dp"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Search Results"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/hide_arrow"
                    android:background="@android:color/transparent"
                    android:src="@drawable/arrow_down"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="16dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="true"
                android:id="@+id/search_recycler_view">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/latest_album_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="4dp"
                    android:paddingTop="14dp"
                    android:layout_height="22dp"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Latest Albums"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/latest_album_progress"
                    android:visibility="visible"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="16dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="true"
                android:id="@+id/latest_album_recycler_view">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
